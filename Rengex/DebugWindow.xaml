<Window x:Class="Rengex.DebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rengex"
        mc:Ignorable="d"
        Title="DebugWindow" Height="450" Width="800">
  <Grid>
    <TextBox Name="TbDebug"/>
    <Button Width="50" Height="50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10" Opacity="0.5"
            Click="OnRegex101Click" ToolTipService.ToolTip="regex101 사이트를 엽니다">
      <Button.Style>
        <Style TargetType="Button">
          <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
              <Setter Property="Opacity" Value="1"/>
            </Trigger>
          </Style.Triggers>
        </Style>
      </Button.Style>
      <Button.Template>
        <ControlTemplate>
          <Grid>
            <Ellipse Fill="#457abb"/>
            <TextBlock Text="R" FontSize="27" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
          </Grid>
        </ControlTemplate>
      </Button.Template>
    </Button>
  </Grid>
</Window>
